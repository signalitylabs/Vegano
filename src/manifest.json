{
    "manifest_version": 3,
    "name": "Vegano",
    "description": "Replaces meat and dairy options on recipe sites with vegan alternatives",
    "version": "1.0",
    "permissions": [],
    "icons": {
      "16": "img/icon-16_x_16.png",
      "32": "img/icon-32_x_32.png",
      "48": "img/icon-48_x_48.png",
      "128": "img/icon-128_x_128.png"
    },
    "action": {
      "default_title": "Vegano",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "js": [
          "js/content.js"
        ],
        "matches": [
          "*://*/*"
        ]
      }
    ]
  }